@using (Html.BeginForm())
{
    @*<div class="btn-group btn-group-justified">
        <button type="submit" class="btn btn-success" formaction="/Feedbacks/Create">Create</button>
        <button type="submit" class="btn btn-success" formaction="/Feedbacks/Update" formmethod="post">Update</button>
        <button type="submit" class="btn btn-success" formaction="/Feedbacks/Delete" formmethod="post">Delete</button>
